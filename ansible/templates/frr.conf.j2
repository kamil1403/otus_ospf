frr version 8.1
frr defaults traditional
hostname {{ ansible_hostname }}
log syslog informational
no ipv6 forwarding
service integrated-vtysh-config

!
! Настройка интерфейсов
!
interface enp0s8
 description Link to Neighbor 1
 ip address 10.0.10.{{ '1' if inventory_hostname == 'router1' else '2' }}/30
 ip ospf mtu-ignore
 ip ospf hello-interval 10
 ip ospf dead-interval 30
 ! Ассиметричный роутинг (Задание 2.2): делаем линк дорогим на router1
 {% if inventory_hostname == 'router1' %}
 ip ospf cost 1000
 {% elif inventory_hostname == 'router2' and symmetric_routing %}
 ! Симметричный роутинг (Задание 2.3): делаем линк дорогим и на router2
 ip ospf cost 1000
 {% endif %}

interface enp0s9
 description Link to Neighbor 2
 {% if inventory_hostname == 'router1' %}
 ip address 10.0.12.1/30
 {% elif inventory_hostname == 'router2' %}
 ip address 10.0.11.2/30
 {% else %}
 ip address 10.0.12.2/30
 {% endif %}
 ip ospf mtu-ignore
 ip ospf hello-interval 10
 ip ospf dead-interval 30

interface enp0s10
 description LAN
 {% if inventory_hostname == 'router1' %}
 ip address 192.168.10.1/24
 {% elif inventory_hostname == 'router2' %}
 ip address 192.168.20.1/24
 {% else %}
 ip address 192.168.30.1/24
 {% endif %}
 ip ospf mtu-ignore
 ip ospf hello-interval 10
 ip ospf dead-interval 30

{% if inventory_hostname == 'router3' %}
interface enp0s8
 description Link to Neighbor R2
 ip address 10.0.11.1/30
 ip ospf mtu-ignore
 ip ospf hello-interval 10
 ip ospf dead-interval 30
{% endif %}

!
! Настройка OSPF
!
router ospf
 {% if router_id_enable %}
 router-id {{ router_id }}
 {% endif %}
 
 network 10.0.10.0/30 area 0
 network 10.0.11.0/30 area 0
 network 10.0.12.0/30 area 0
 network 192.168.10.0/24 area 0
 network 192.168.20.0/24 area 0
 network 192.168.30.0/24 area 0
 
 {% if inventory_hostname == 'router1' %}
 neighbor 10.0.10.2
 neighbor 10.0.12.2
 {% elif inventory_hostname == 'router2' %}
 neighbor 10.0.10.1
 neighbor 10.0.11.1
 {% elif inventory_hostname == 'router3' %}
 neighbor 10.0.11.2
 neighbor 10.0.12.1
 {% endif %}

log file /var/log/frr/frr.log
default-information originate always
